{{!-- title and scraping button will go here --}}
<div class="container">
    <div class="row">
        <div class="col s12 center">
            <h1>Skate Feed</h1>
            <h5>Stay up to date with everything skateboarding related!</h5>
        </div>
    </div>

    <div class="row center">
        <a class="waves-effect waves-light btn" id="scrape-button"><i class="material-icons left">cloud</i>update
            feed</a>
    </div>
</div>

{{#each results}}
<div class="row" id="scraped-articles">

    <div class="col s2">
        <img src="{{this.image}}" alt="{{this.title}}">
    </div>
    <div class="col s10" id="headline">
        <h4>{{this.title}}</h4>
        <p>{{this.description}}</p>
        <p>Check it out <a href="{{this.link}}">here</a></p>

        <!-- Modal Trigger -->
        {{!-- <a id="comments-button" class="waves-effect waves-light btn" href="#comment-modal" data-id="{{this._id}}">Comments</a> --}}

        <!-- Modal Trigger -->
  <button class="btn comments-button" data-id="{{this._id}}">Comments</button>

        <!-- Modal Structure -->
        <div id="comment-modal" class="modal">

            <div class="modal-content">
                <p id="comment-body"></p>
            </div>

            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
        </div>

    </div>
</div>
{{!-- this terminates the scraped articles feed --}}
{{/each}}